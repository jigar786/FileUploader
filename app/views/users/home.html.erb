<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-9">
      <div class="row">
        <div class="col-6">
          <%= form_for(:user_files , url: user_files_path)  do |f| %>
            <div class="form-group">
              <%= f.file_field :file_name , :required =>  true ,class: "form-control-file" %>
            </div>
            <%= f.submit "Post", class: "btn btn-primary btn-lg mt-2" %>
          <% end %>
        </div>
        <div class="col-6">
          <table class="table table-striped">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Filename</th>
                <th scope="col">Download</th>
                <th scope="col">Delete</th>
              </tr>
            </thead>
            <tbody>
              <% @files.each do |file| %>
                <tr>
                  <ul type="disc">
                    <th scope="row">
                      <li></li>
                    </th>
                  </ul>
                  <td> <%=file.file_name_identifier%></td>
                  <td><center><%= link_to fa_icon('download', type: :solid ) , user_files_download_path(file.id) %></center></td>
                  <td><center><%= link_to fa_icon('trash', type: :solid ) , user_file_path(file.id) , method: :delete,data: {confirm: "Are you sure?"}  %></center></td>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
